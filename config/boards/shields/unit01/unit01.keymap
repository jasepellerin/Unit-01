#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define BASE 0
#define SYMBOLS 1
#define NUMBERS 2
#define FUNCTIONS 3

 &sk {
  release-after-ms = <2000>;
  quick-release;
 };

/ {
  keymap {
    compatible = "zmk,keymap";

    Base_layer {
      bindings = <
        &kp W &kp F &kp P &kp B &kp J &kp L &kp U &kp Y &kp A &kp R &kp S &kp T &kp G &kp M &kp N &kp E &kp I &kp O &kp Z &kp X &kp C &kp V &kp D &kp K &kp H &kp Q &kp DOT &kp COMMA &kp SPACE &sk LEFT_SHIFT &sk LEFT_CONTROL &to SYMBOLS 
      >;
    };

    Symbols_layer {
      bindings = <
        &kp AT_SIGN &kp HASH &kp DOLLAR &kp PERCENT &kp CARET &kp AMPERSAND &kp ASTERISK &kp BACKSPACE &kp EXCLAMATION &kp PIPE &kp SLASH &kp LT &kp GT &kp LEFT_BRACE &kp RIGHT_BRACE &kp LEFT_PARENTHESIS &kp RIGHT_PARENTHESIS &kp RETURN &kp GRAVE &kp TILDE &kp QUESTION &kp SEMICOLON &kp COLON &kp LEFT_BRACKET &kp RIGHT_BRACKET &kp SINGLE_QUOTE &kp DOUBLE_QUOTES &to FUNCTIONS &to BASE &trans &sk undefined &to NUMBERS 
      >;
    };

    Numbers_layer {
      bindings = <
        &kp NUMBER_7 &kp NUMBER_8 &kp NUMBER_9 &kp PLUS &kp C_AC_BACK &kp C_AC_REFRESH &kp C_AC_FORWARD &kp BACKSPACE &kp UNDERSCORE &kp NUMBER_4 &kp NUMBER_5 &kp NUMBER_6 &kp MINUS &none &none &none &none &kp RETURN &kp NUMBER_0 &kp NUMBER_1 &kp NUMBER_2 &kp NUMBER_3 &kp EQUAL &none &none &none &none &to SYMBOLS &to BASE &trans &trans &to FUNCTIONS 
      >;
    };

    Functions_layer {
      bindings = <
        &kp ESCAPE &kp C_PREVIOUS &kp C_NEXT &none &kp C_AC_BACK &kp C_AC_REFRESH &kp C_AC_FORWARD &kp BACKSPACE &kp TAB &none &none &none &none &kp LEFT &kp DOWN &kp UP &kp RIGHT &kp RETURN &none &none &none &none &none &none &none &none &bt BT_PRV &bt BT_NXT &to BASE &trans &trans &to NUMBERS 
      >;
    };

  };
};